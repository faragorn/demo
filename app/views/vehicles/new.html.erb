<div class="container">
  <%= form_for @vehicle, :as => :vehicle, :url => vehicles_path(@vehicle), :html => { :class => 'form-signin'}, :method => :post do |p| %>
      <h2 class="form-signin-heading">Vehicle Registration</h2>
      <%= p.text_field :license_plate, :class => 'form-control', :placeholder => 'plate number' %>
      <%= show_field_error(@vehicle, :license_plate) %>
      <%= p.text_field :colour, :class => 'form-control', :placeholder => 'colour' %>
      <%= show_field_error(@vehicle, :colour) %>
      <%= p.text_field :make, :class => 'form-control', :placeholder => 'make' %>
      <%= show_field_error(@vehicle, :make) %>
      <%= p.text_field :model, :class => 'form-control', :placeholder => 'model' %>
      <%= show_field_error(@vehicle, :model) %>
      <%= p.text_field :year, :class => 'form-control', :placeholder => 'year' %>
      <%= show_field_error(@vehicle, :year) %>
      <button class="btn btn-lg btn-primary btn-block" type="submit">Save</button>
  <% end %>
</div>