<div class="container">
  <%= form_for @user, :as => :user, :url => sign_up_path(@user), :html => { :class => 'form-signin'}, :method => :post do |u| %>
      <h2 class="form-signin-heading">Registration</h2>
      <%= u.email_field :email, :class => 'form-control', :placeholder => 'e-mail' %>
      <%= show_field_error(@user, :email) %>
      <%= u.password_field :password, :class => 'form-control', :placeholder => 'password' %>
      <%= show_field_error(@user, :password) %>
      <%= u.password_field :password_confirmation, :class => 'form-control', :placeholder => 'confirm password' %>
      <%= show_field_error(@user, :password_confirmation) %>
      <button class="btn btn-lg btn-primary btn-block" type="submit">Sign up</button>
  <% end %>
</div>